<Window x:Class="ProspectServerOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProspectServerOverlay"
        mc:Ignorable="d"
        Title="Prospect Server Overlay"
        Height="160"
        Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        Left="20"
        Top="20"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        IsHitTestVisible="False"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.EdgeMode="Aliased">
    <Window.Resources>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#00FF00"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid CacheMode="BitmapCache">
        <Grid Margin="10" CacheMode="BitmapCache">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText"
                       Grid.Row="0"
                       Text="Recycle Server Connection Info"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"
                       Margin="0,0,0,2"
                       CacheMode="BitmapCache"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="Aliased"/>

            <TextBlock x:Name="RegionText"
                       Grid.Row="1"
                       Text="{Binding Region, StringFormat='Region: {0}'}"
                       FontSize="12"
                       Foreground="{StaticResource TextColor}"
                       Margin="0,0,0,2"
                       CacheMode="BitmapCache"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="Aliased"/>

            <TextBlock x:Name="SessionIdText"
                       Grid.Row="2"
                       Text="{Binding SessionId, StringFormat='Session: {0}'}"
                       FontSize="10"
                       Foreground="{StaticResource TextColor}"
                       FontFamily="Consolas"
                       CacheMode="BitmapCache"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="Aliased"/>

            <TextBlock x:Name="StatusText"
                       Grid.Row="3"
                       Text="{Binding Status}"
                       FontSize="8"
                       Foreground="{StaticResource AccentColor}"
                       Margin="0,2,0,0"
                       TextWrapping="Wrap"
                       CacheMode="BitmapCache"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="Aliased"/>
        </Grid>

        <!-- Debug text positioned below the main content -->
        <TextBlock x:Name="DebugText"
                   Text="{Binding DebugInfo}"
                   FontSize="7"
                   Foreground="#666666"
                   Margin="20,5,20,10"
                   TextWrapping="Wrap"
                   MaxHeight="40"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Stretch"
                   Visibility="{Binding DebugVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                   CacheMode="BitmapCache"
                   TextOptions.TextFormattingMode="Display"
                   TextOptions.TextRenderingMode="Aliased"/>
    </Grid>
</Window>
